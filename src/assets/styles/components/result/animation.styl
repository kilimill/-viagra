.result
	&__bg
		transform translate(-50%, -50%) scale(1.1)
		transition transform 1.5s
		will-change transform
	&__hero
		@media $desktop
			&:before
				content ''
				position absolute
				left 0
				top 0
				width 100%
				height 100%
				background linear-gradient(90deg, #0053DA 8.62%, #052862 110.89%)
				transition left .7s
				will-change left
	&__undertitle
		opacity 0
		transform translateY(100%)
		transition .5s transform, .5s opacity
		transition-delay .4s
	&__title-word
		p
			transform translateY(100%)
			transition .5s transform
	&__text
		opacity 0
		transform translateY(50%)
		transition .5s transform, .5s opacity
		transition-delay 1.1s
	&__share
		opacity 0
		transition .5s opacity
		transition-delay 1.5s
	&__scroll
		opacity 0
		transition .5s opacity
		transition-delay 1.9s
	&__screen-title
		p
			transform translateY(100%)
			transition .5s transform
	&__screen-text
		opacity 0
		transform translateY(50%)
		transition .5s transform, .5s opacity
	&__screen-numb
		opacity 0
		transition .5s opacity
	&__screen--one:before,
	&__screen--two:before,
	&__screen--three:before,
	&__screen--four:before,
	&__screen--fifth:before
		opacity 0
		transition .5s opacity
	&__screen
		&:after
			width 0
			transition .5s width
			// width vw(1022)
	&__footer-title-word
		p
			transform translateY(100%)
			transition .5s transform
	&__footer-subtitle
		opacity 0
		transform translateY(100%)
		transition .5s transform, .5s opacity

.result[loaded]
	.result
		&__hero
			&:before
				left -100%
		&__bg
			transform translate(-50%, -50%) scale(1)
		&__undertitle
			opacity 1
			transform translateY(0)
		&__title-word
			p
				transform translateY(0)
			&:nth-child(1)
				p
					transition-delay .6s
			&:nth-child(2)
				p
					transition-delay .7s
			&:nth-child(3)
				p
					transition-delay .8s
			&:nth-child(4)
				p
					transition-delay .9s
			&:nth-child(5)
				p
					transition-delay .10s
		&__text
			opacity 1
			transform translateY(0)
		&__share
			opacity 1
		&__scroll
			opacity 1

.result__screen[visible]
	.result
		&__screen-title
			p
				transform translateY(0)
			&:nth-child(1)
				p
					transition-delay .4s
			&:nth-child(2)
				p
					transition-delay .5s
		&__screen-text
			opacity 1
			transform translateY(0)
			transition-delay .7s
		&__screen-numb
			opacity 1
			transition-delay .3s

	.result-one-svg
		animation r1-1svg 15s linear forwards
	.result-two-svg
		animation r1-2svg 15s linear forwards
	.result-three-svg
		animation r1-3svg 15s linear forwards
	.result-four-svg
		animation r1-4svg 15s linear forwards
	.result-fifth-svg
		animation r1-5svg 15s linear forwards
	.result-two-one-svg
		animation r2-1svg 15s linear forwards
	.result-two-two-svg
		animation r2-2svg 15s linear forwards
	.result-two-three-svg
		animation r2-3svg 15s linear forwards
	.result-two-four-svg
		animation r2-4svg 15s linear forwards
	.result-two-five-svg
		animation r2-5svg 15s linear forwards

.result__screen--one[visible]:before,
.result__screen--two[visible]:before,
.result__screen--three[visible]:before,
.result__screen--four[visible]:before,
.result__screen--fifth[visible]:before
	opacity 1
	transition-delay .7s
.result__screen[visible]:after
	width vw(1022)
	transition-delay 1s

.result__footer[visible]
	.result
		&__footer-title-word
			p
				transform translateY(0)
			&:nth-child(1)
				p
					transition-delay .1s
			&:nth-child(2)
				p
					transition-delay .2s
			&:nth-child(3)
				p
					transition-delay .3s
			&:nth-child(4)
				p
					transition-delay .4s
			&:nth-child(5)
				p
					transition-delay .5s
			&:nth-child(6)
				p
					transition-delay .6s
		&__footer-subtitle
			opacity 1
			transform translateY(0)
			transition-delay .8s

