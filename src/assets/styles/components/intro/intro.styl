.intro
	padding-left vw(215)
	padding-right vw(240)
	position relative
	overflow-x hidden
	overflow-y visible
	min-height inherit
	width 100%
	dfv(,center)
	@media $mobile
		margin 0
		padding 0 vm(26)
		padding-top vm(26)
	&:before
		content ''
		top 0
		right vw(-91)
		position absolute
		width vw(1003)
		height 1px
		background-color #E3E5E6
		@media $mobile
			width vm(255)
			right 0
			top 0
	&__title
		&--last
			padding-bottom vw(9)
			@media $mobile
				padding-bottom vm(5)
		p
			ff $ro
			fontify vw(90) 400 91%
			letter-spacing .02em
			-webkit-text-fill-color $t
			-webkit-text-stroke-width vw(4)
			-webkit-text-stroke-color #E2E5E5
			@media $mobile
				fontify vm(35) 400 vm(39)
	&__subtitle
		&--last
			margin-bottom vw(38)
			@media $mobile
				margin-bottom vm(29)
		p
			ff $ro
			fontify vw(90) 400 91%
			letter-spacing .02em
			background linear-gradient(90.47deg, #FCFEFF -14.42%, #9EAFB4 54.9%, #EEEEEE 93.87%)
			-webkit-background-clip text
			-webkit-text-fill-color transparent
			@media $mobile
				fontify vm(35) 400 vm(35)
	&__container
		df(center)
		margin-left vw(142)
		padding-top vw(35)
		padding-bottom vw(26)
		position relative
		&:before
			content ''
			position absolute
			top 0
			left 0
			width 100%
			height 1px
			background-color #E3E5E6
		@media $mobile
			margin-left 0
			padding-top vm(21)
			dfv()
			&:before
				content ''
				position absolute
				left vm(-26)
				top 0
				height 1px
				width vm(284)
				background-color $white
	&__text
		fontify vw(17) 400 138.4%
		color rgba(255,255,255,.8)
		letter-spacing -.04em
		max-width vw(510)
		margin-right vw(65)
		@media $mobile
			fontify vm(14) 400 vm(19)
			max-width 100%
			margin-right 0
			padding-left vm(19)
			margin-bottom vm(20)
	&__play
		button
			fontify vw(20) 400 vw(24)
			letter-spacing -.04em
			color $white
			width vw(180)
			height vw(180)
			background #28BCE4
			border 1px solid #28BCE4
			box-sizing border-box
			box-shadow vw(7) vw(14) vw(6) rgba(0, 0, 0, 0.2)
			border-radius 50%
			dfv(center,center)
			transition .4s transform
			@media $desktop
				&:hover
					transform scale(1.11)
			@media $mobile
				margin 0 auto
				width vm(120)
				height vm(120)
				fontify vm(17) 400 vm(2)
			&:after
				content ''
				position static
				display inline-block
				margin-top vw(15)
				width vw(103)
				height vw(16)
				background-image url("data:image/svg+xml,%3Csvg viewBox='0 0 103 16' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M102.707 8.70711C103.098 8.31658 103.098 7.68342 102.707 7.29289L96.3431 0.928932C95.9526 0.538408 95.3195 0.538408 94.9289 0.928932C94.5384 1.31946 94.5384 1.95262 94.9289 2.34315L100.586 8L94.9289 13.6569C94.5384 14.0474 94.5384 14.6805 94.9289 15.0711C95.3195 15.4616 95.9526 15.4616 96.3431 15.0711L102.707 8.70711ZM0 9H102V7H0V9Z' fill='white'/%3E%3C/svg%3E%0A")
				transition .4s transform
				background-repeat no-repeat
				animation slideX 2s linear infinite
				@media $mobile
					width vm(62)
					height vm(10)
					margin-top 0
					position relative
					bottom vm(-15)

@keyframes slideX
	0%
		transform translateX(5px)
	50%
		transform translateX(-5px)
	100%
		transform translateX(5px)
